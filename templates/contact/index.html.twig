{% extends 'base.html.twig' %}

{% block title %}Demande d'étude{% endblock %}

{% block body %}
<div class="container mt-5">
        <h1 class="text-center " id="etude">Demande d'étude</h1>
        <h2 class="text-center " id="projet">Dites-nous en plus sur votre projet et nous vous rappellerons pour en parler</h2>
        
        <div class="row mt-5">
            <!-- Formulaire de demande d'étude -->
            <div class="col-md-7">
                <form>
                    <div class="mb-3">
                        <label for="projectType" class="form-label">Votre projet *</label>
                        <div>
                            <input type="checkbox" id="renovation" name="projectType" value="renovation">
                            <label for="renovation">Projet rénovation clé-en-main</label><br>
                            <input type="checkbox" id="travaux" name="projectType" value="travaux">
                            <label for="travaux">Travaux</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="localType" class="form-label">Type de locaux *</label>
                        <div>
                            <input type="checkbox" id="bureaux" name="localType" value="bureaux">
                            <label for="bureaux">Bureau</label><br>
                            <input type="checkbox" id="locale" name="localType" value="locale">
                            <label for="local-pro">Local professionnel</label><br>
                            <input type="checkbox" id="appartement" name="localType" value="appartement">
                            <label for="appartement">Appartement</label><br>
                            <input type="checkbox" id="maison" name="localType" value="maison">
                            <label for="maison">Maison</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="surface" class="form-label">Surface des locaux *</label>
                        <select id="surface" class="form-select">
                            <option value="0-100">0-100 m²</option>
                            <option value="100-300">100-300 m²</option>
                            <option value="300-500">300-500 m²</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="budget" class="form-label">Budget prévisionnel *</label>
                        <select id="budget" class="form-select">
                            <option value="0-80k">0-80 k€</option>
                            <option value="80-200k">80-200 k€</option>
                            <option value="200-350k">200-350 k€</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="company" class="form-label">Votre Société/Entreprise</label>
                        <input type="text" id="company" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Localisation du projet *</label>
                        <input type="text" id="location" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="coordinates" class="form-label">Vos coordonnées *</label>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" id="firstName" class="form-control" placeholder="Prénom" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" id="lastName" class="form-control" placeholder="Nom" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Votre téléphone *</label>
                        <input type="tel" id="phone" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Votre email *</label>
                        <input type="email" id="email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="projectDetails" class="form-label">Précisez votre projet *</label>
                        <textarea id="projectDetails" class="form-control" rows="4" required></textarea>
                    </div>

                    <div class="mb-3">
                        <input type="checkbox" id="dataConsent" name="dataConsent" required>
                        <label for="dataConsent">J'accepte l'utilisation de mes données</label>
                    </div>

                    <button type="submit" class="btn btn-primary submit-etude">Envoyer</button>
                </form>
            </div>

            <!-- Carte Google et coordonnées -->
            <div class="col-md-5">
                <div class="mb-4">
                    <h4 class="adress">Notre adresse</h4>
                    <p>26 Rue gabriel péri, 91210 Draveil</p>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2636.6816946901243!2d2.4123148159291843!3d48.67400447926701!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e67a13f8491d91%3A0x55f25d31d5df564d!2s26%20Rue%20Gabriel%20P%C3%A9ri%2C%2091210%20Draveil!5e0!3m2!1sfr!2sfr!4v1696000075605!5m2!1sfr!2sfr" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>

                <div class="mb-4">
                    <h4 class="tel-email">Vos contacts</h4>
                    <p><strong>Télèphone :</strong> 07 61 10 69 59</p>
                    <p><strong>Email :</strong> <a href="homerenovations91@gmail.com" class="adress-mail">homerenovations91@gmail.com</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
