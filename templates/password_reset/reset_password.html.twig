{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container my-5 back">
    <div class="card mx-auto shadow-lg p-4" style="max-width: 500px;">
        <h2 class="text-center mb-4" style="color: #1d4e89;">Réinitialiser votre mot de passe</h2>

        <form method="post" class="mt-4">
            <div class="form-group mb-3">
                <label for="password" class="form-label" style="font-weight: bold;">Nouveau mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Entrez votre nouveau mot de passe" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3" style="background-color: #1d4e89; border: none;">Réinitialiser</button>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
        margin-top: 40px;
    }

    /* Custom styling for the card */
    .card {
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-size: 1rem;
        color: #333;
    }

    /* Style for button hover */
    .btn-primary:hover {
        background-color: #16477a;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .card {
            margin: 20px;
            padding: 20px;
        }
    }
</style>
{% endblock %}
