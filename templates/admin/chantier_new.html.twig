{% extends 'base.html.twig' %}

{% block title %}Ajouter un Chantier{% endblock %}

{% block body %}
<div class="container mt-5 back">
    <h1 class="text-center">Ajouter un Chantier</h1>

    {{ form_start(form ) }}
        <div class="form-group mt-4">
            {{ form_label(form.nom, 'Nom du Chantier', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group mt-4">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group mt-4">
            {{ form_label(form.images) }}
            {{ form_widget(form.images) }}
            {{ form_errors(form.images) }}
        </div>

   <div class="text-center mt-4 button-group">
    <button type="submit" class="btn btn-success">Ajouter le Chantier</button>
    <a href="{{ path('app_realisations') }}" class="btn btn-secondary">Annuler</a>
</div>


    {{ form_end(form) }}
</div>
<style>
.btn-success {
    background-color: #1d4e89;
    border-color: #1d4e89;
    margin-bottom: 80px;
}
.button-group {
    display: flex;
    gap: 10px; /* Ajuste l'espacement entre les boutons */
    justify-content: center;
}

.button-group .btn {
    min-width: 150px; /* Assure une largeur minimale pour les boutons */
    padding: 10px 20px; /* Ajuste le remplissage pour une taille uniforme */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 80px;
}



</style>
{% endblock %}
