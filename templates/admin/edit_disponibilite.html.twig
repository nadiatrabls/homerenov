{% extends 'base.html.twig' %}

{% block title %}Modifier la Disponibilité{% endblock %}

{% block body %}
<div class="container mt-5 back">
    <div class="card shadow-lg border-0">
        <div class="card-header text-white text-center">
            <h2>Modifier la Disponibilité</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.date, 'Date de disponibilité') }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.heureDebut, 'Heure de début') }}
                    {{ form_widget(form.heureDebut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.heureDebut) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.heureFin, 'Heure de fin') }}
                    {{ form_widget(form.heureFin, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.heureFin) }}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">Modifier</button>
                    <a href="{{ path('admin_disponibilites') }}" class="btn btn-secondary annuler">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Styles personnalisés -->
<style>
    .card-header {
        background-color: #1d4e89; /* Couleur principale du logo */
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .form-control {
        box-shadow: none;
        border: 1px solid #ced4da;
        padding: 10px;
    }

    .container {
        max-width: 700px;
        margin-bottom: 50px;
    }

    @media (max-width: 768px) {
        /* Styles pour petits écrans */
        .container {
            padding: 20px;
        }
    }
</style>
{% endblock %}
