{% extends 'base.html.twig' %}

{% block title %}Modifier le devis{% endblock %}

{% block body %}
<div class="container my-5 back">
    <div class="card shadow-lg border-0">
        <div class="card-header  text-white text-center">
            <h2>Modifier le devis</h2>
        </div>
        <div class="card-body">
            {{ form_start(form_devis) }}
                <div class="mb-3">
                    {{ form_row(form_devis.numero) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form_devis.dateCreation) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form_devis.montant) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form_devis.adressChantier) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form_devis.fichier) }}
                </div>
                <button type="submit" class="btn btn-success w-100 mt-3">
                    <i class="fas fa-save"></i> Mettre à jour le devis
                </button>
            {{ form_end(form_devis) }}

            <div class="text-center mt-4">
                <a href="{{ path('user_show', {id: devis.user.id}) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour aux détails de l'utilisateur
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Styles personnalisés -->
<style>
    .card-header {
        background-color: #1d4e89; /* Couleur principale du logo */
        font-size: 1.5rem;
    }

    .btn-primary {
        background-color: #1d4e89;
        border-color: #1d4e89;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success i {
        margin-right: 5px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary i {
        margin-right: 5px;
    }

    .shadow-lg {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .w-100 {
        width: 100%;
    }

    .mb-3 {
        margin-bottom: 1.5rem;
    }

    .mt-3 {
        margin-top: 1rem;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    @media (max-width: 767px) {
        /* Styles pour petits écrans */
        .card-header {
            font-size: 1.3rem;
        }

        .btn {
            font-size: 0.9rem;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .mt-3 {
            margin-top: 0.5rem;
        }

        .mt-4 {
            margin-top: 1rem;
        }
    }
</style>
{% endblock %}
