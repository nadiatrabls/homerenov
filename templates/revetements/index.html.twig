<section class="revetement-content">
        <div class="image-section-revetement">
    <div class="main-image">
        <img src="{{ asset('images/revetement5.jpg') }}" alt="Main Image" class="img-fluid">
    </div>
    <div class="image-thumbnails-revetement">
