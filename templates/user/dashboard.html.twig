{% extends 'base.html.twig' %}

{% block title %}Espace client{% endblock %}

{% block body %}
<div class="container my-5 back">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Bienvenue, {{ user.prenom }} {{ user.nom }}</h2>
        </div>
        <div class="card-body">

            <!-- Affichage des messages d'alerte -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="row">
                <!-- Informations personnelles -->
                <div class="col-md-6">
                    <h5 class="mb-3">Vos informations personnelles :</h5>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Email :</strong> {{ user.email }}</li>
                        <li class="list-group-item"><strong>Date de naissance :</strong> {{ user.dateNaissance|date('d/m/Y') }}</li>
                        <li class="list-group-item"><strong>Téléphone :</strong> {{ user.telephone }}</li>
                        <li class="list-group-item"><strong>Adresse :</strong> {{ user.adressePostale }}</li>
                    </ul>
                </div>

                <!-- Actions utilisateur -->
                <div class="col-md-6">
                    <h5 class="mb-3">Actions :</h5>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="{{ path('demander_facture', {'id': user.id}) }}" class="btn btn-outline-primary btn-block">Demander une facture</a></li>
                        <li class="list-group-item"><a href="#" class="btn btn-outline-success btn-block">Demander un rendez-vous</a></li>
                        <li class="list-group-item"><a href="#factures" class="btn btn-outline-info btn-block">Consulter vos factures</a></li>
                        <li class="list-group-item"><a href="#devis" class="btn btn-outline-warning btn-block">Consulter vos devis</a></li>
                    </ul>
                </div>
            </div>

            <hr>

            <!-- Liste des factures -->
            <h5 id="factures" class="mb-3">Vos factures :</h5>
            {% if factures is not empty %}
                <div class="row">
                    {% for facture in factures %}
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-header bg-secondary text-white">Facture N° {{ facture.numero }}</div>
                                <div class="card-body">
                                    <p class="card-text"><strong>Montant :</strong> {{ facture.montant }} €</p>
                                    <p class="card-text"><strong>Date d'émission :</strong> {{ facture.dateEmission|date('d/m/Y') }}</p>
                                    <a href="{{ path('user_download_facture', {id: facture.id}) }}" class="btn btn-primary" target="_blank">Télécharger</a>
                                    <a href="{{ path('user_view_facture', {id: facture.id}) }}" class="btn btn-info">Voir la facture</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">Aucune facture trouvée.</p>
            {% endif %}

            <hr>

            <!-- Liste des devis -->
            <h5 id="devis" class="mb-3">Vos devis :</h5>
            {% if devis is not empty %}
                <div class="row">
                    {% for devis in devis %}
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-header bg-success text-white">Devis N° {{ devis.numero }}</div>
                                <div class="card-body">
                                    <p class="card-text"><strong>Montant :</strong> {{ devis.montant }} €</p>
                                    <p class="card-text"><strong>Date de création :</strong> {{ devis.dateCreation|date('d/m/Y') }}</p>
                                    <a href="{{ path('user_download_devis', {id: devis.id}) }}" class="btn btn-primary" target="_blank">Télécharger</a>
                                    <a href="{{ path('user_view_devis', {id: devis.id}) }}" class="btn btn-info">Voir le devis</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">Aucun devis trouvé.</p>
            {% endif %}

        </div>
        <div class="card-footer text-center">
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
        </div>
    </div>
</div>
{% endblock %}

