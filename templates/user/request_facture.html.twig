{% extends 'base.html.twig' %}

{% block title %}Demander une facture{% endblock %}

{% block body %}
<div class="container my-5 back">
    <div class="card shadow-lg">
        <div class="card-header  text-white text-center">
            <h2>Demander une facture</h2>
        </div>
        <div class="card-body">
            <p class="text-center">Vous pouvez demander une facture en remplissant le formulaire ci-dessous.</p>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.referenceChantier, 'Référence du chantier', { 'label_attr': {'class': 'font-weight-bold'} }) }}
                    {{ form_widget(form.referenceChantier, { 'attr': {'class': 'form-control', 'placeholder': 'Référence du chantier'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.factureAuNomDe, 'Facture au nom de', { 'label_attr': {'class': 'font-weight-bold'} }) }}
                    {{ form_widget(form.factureAuNomDe, { 'attr': {'class': 'form-control', 'placeholder': 'Nom de la personne ou société'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.message, 'Message (facultatif)', { 'label_attr': {'class': 'font-weight-bold'} }) }}
                    {{ form_widget(form.message, { 'attr': {'class': 'form-control', 'placeholder': 'Ajoutez un message si nécessaire'} }) }}
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Envoyer la demande</button>
                    <a href="{{ path('user_dashboard', {'id':user.id}) }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<style>
.card-header {
        background-color: #1d4e89;
    }
</style>
{% endblock %}
